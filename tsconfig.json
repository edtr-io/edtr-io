{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "jsx": "react",
    "module": "commonjs",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "strict": true,
    "target": "esnext",

    "baseUrl": "packages",
    "paths": {
      "@edtr-io/core": ["core/src"],
      "@edtr-io/ui": ["ui/src"],
      "@edtr-io/editor-ui": ["ui-editor/src"],
      "@edtr-io/renderer-ui": ["ui-renderer/src"],
      "@edtr-io/plugin-anchor": ["plugin-anchor/src"],
      "@edtr-io/plugin-blockquote": ["plugin-blockquote/src"],
      "@edtr-io/plugin-equations": ["plugin-equations/src"],
      "@edtr-io/plugin-files": ["@edtr-io/plugin-files/src"],
      "@edtr-io/plugin-geogebra": ["plugin-geogebra/src"],
      "@edtr-io/plugin-h5p": ["plugin-h5p/src"],
      "@edtr-io/plugin-highlight": ["plugin-highlight/src"],
      "@edtr-io/plugin-hint": ["plugin-hint/src"],
      "@edtr-io/plugin-image": ["plugin-image/src"],
      "@edtr-io/plugin-input-exercise": ["plugin-input-exercise/src"],
      "@edtr-io/plugin-rows": ["plugin-rows/src"],
      "@edtr-io/plugin-sc-mc-exercise": ["plugin-sc-mc-exercise/src"],
      "@edtr-io/plugin-solution": ["plugin-solution/src"],
      "@edtr-io/plugin-spoiler": ["plugin-spoiler/src"],
      "@edtr-io/plugin-text": ["plugin-text/src"],
      "@edtr-io/plugin-video": ["plugin-video/src"]
    }
  }
}
