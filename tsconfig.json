{
  "extends": "./tsconfig.prod.json",
  "compilerOptions": {
    "module": "commonjs",
    "importHelpers": false,
    "baseUrl": "packages",
    "paths": {
      // Plugins
      "@edtr-io/plugin-anchor": ["plugins/anchor/src"],
      "@edtr-io/plugin-blockquote": ["plugins/blockquote/src"],
      "@edtr-io/plugin-equations": ["plugins/equations/src"],
      "@edtr-io/plugin-files": ["plugins/files/src"],
      "@edtr-io/plugin-geogebra": ["plugins/geogebra/src"],
      "@edtr-io/plugin-highlight": ["plugins/highlight/src"],
      "@edtr-io/plugin-hint": ["plugins/hint/src"],
      "@edtr-io/plugin-image": ["plugins/image/src"],
      "@edtr-io/plugin-important-statement": [
        "plugins/important-statement/src"
      ],
      "@edtr-io/plugin-input-exercise": ["plugins/input-exercise/src"],
      "@edtr-io/plugin-multimedia-explanation": [
        "plugins/multimedia-explanation/src"
      ],
      "@edtr-io/plugin-rows": ["plugins/rows/src"],
      "@edtr-io/plugin-sc-mc-exercise": ["plugins/sc-mc-exercise/src"],
      "@edtr-io/plugin-serlo-injection": ["plugins/serlo-injection/src"],
      "@edtr-io/plugin-solution": ["plugins/solution/src"],
      "@edtr-io/plugin-spoiler": ["plugins/spoiler/src"],
      "@edtr-io/plugin-table": ["plugins/table/src"],
      "@edtr-io/plugin-text": ["plugins/text/src"],
      "@edtr-io/plugin-video": ["plugins/video/src"],

      // Private
      "@edtr-io/internal__bundle-size": ["private/bundle-size/src"],
      "@edtr-io/internal__demo": ["private/demo/src"],
      "@edtr-io/internal__document-editor": ["private/document-editor/src"],
      "@edtr-io/internal__fixtures": ["private/fixtures/src"],
      "@edtr-io/internal__plugin": ["private/plugin/src"],
      "@edtr-io/internal__plugin-state": ["private/plugin-state/src"],
      "@edtr-io/internal__plugin-toolbar": ["private/plugin-toolbar/src"],

      // Public
      "@edtr-io/core": ["public/core/src"],
      "@edtr-io/default-document-editor": [
        "public/default-document-editor/src"
      ],
      "@edtr-io/default-plugin-toolbar": ["public/default-plugin-toolbar/src"],
      "@edtr-io/document-editor": ["public/document-editor/src"],
      "@edtr-io/editor-ui": ["public/editor-ui/src"],
      "@edtr-io/plugin": ["public/plugin/src"],
      "@edtr-io/plugin-toolbar": ["public/plugin-toolbar/src"],
      "@edtr-io/renderer": ["public/renderer/src"],
      "@edtr-io/renderer-ssr": ["public/renderer-ssr/src"],
      "@edtr-io/renderer-ui": ["public/renderer-ui/src"],
      "@edtr-io/store": ["public/store/src"],
      "@edtr-io/store-devtools": ["public/store-devtools/src"],
      "@edtr-io/ui": ["public/ui/src"]
    }
  }
}
