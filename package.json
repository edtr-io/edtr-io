{
  "name": "@edtr-io/edtr-io-workspace",
  "version": "0.0.0",
  "license": "MIT",
  "author": "edtr.io Consortium",
  "repository": "edtr-io/edtr-io",
  "scripts": {
    "start": "lerna run --stream start",
    "test": "jest",
    "prebuild": "yarn --frozen-lockfile",
    "build": "lerna run --ignore=@edtr-io/{bundle-size,demo} --stream build",
    "prebuild-demo": "yarn build",
    "build-demo": "lerna run --scope=@edtr-io/demo build",
    "format": "npm-run-all -c format:*",
    "format:eslint": "yarn _eslint --fix",
    "format:prettier": "yarn _prettier --write",
    "lint": "npm-run-all lint:*",
    "lint:eslint": "yarn _eslint",
    "lint:prettier": "yarn _prettier --check",
    "lint:tsc": "tsc --noEmit",
    "changelog": "ts-node scripts/changelog",
    "predeploy": "yarn build",
    "deploy": "yarn _publish",
    "deploy:from-package": "yarn deploy from-package",
    "deploy:prerelease": "yarn lerna version --amend --no-push && yarn deploy:from-package --dist-tag next",
    "_eslint": "eslint \"{{packages/*,scripts}/{{__fixtures__,__helpers__,__stories__,__tests__,src}/**/*,*},*}.{js,jsx,ts,tsx}\"",
    "_publish": "lerna publish --message \"chore: release %v\"",
    "_prettier": "prettier \"{{.circleci,docs,packages/*,scripts}/{{__fixtures__,__helpers__,__stories__,__tests__,src}/**/*,*},*}.{js,jsx,ts,tsx,json,md,yaml,yml}\""
  },
  "dependencies": {},
  "devDependencies": {
    "@babel/cli": "^7.0.0",
    "@babel/core": "^7.0.0",
    "@babel/plugin-proposal-class-properties": "^7.0.0",
    "@babel/plugin-transform-runtime": "^7.0.0",
    "@babel/preset-env": "^7.0.0",
    "@babel/preset-react": "^7.0.0",
    "@babel/preset-typescript": "^7.0.0",
    "@splish-me/changelog": "^0.1.0",
    "@types/jest": "^24.0.0",
    "@typescript-eslint/eslint-plugin": "^1.0.0",
    "@typescript-eslint/parser": "^1.0.0",
    "eslint": "^5.0.0",
    "eslint-config-prettier": "^5.0.0",
    "eslint-plugin-react": "^7.0.0",
    "eslint-plugin-react-hooks": "^1.0.0",
    "husky": "^2.0.0",
    "jest": "^24.0.0",
    "lerna": "^3.0.0",
    "lint-staged": "^8.0.0",
    "npm-run-all": "^4.0.0",
    "prettier": "^1.0.0",
    "rimraf": "^2.0.0",
    "ts-node": "^8.0.0",
    "tsdx": "^0.7.0",
    "tslib": "^1.0.0",
    "typescript": "^3.0.0"
  },
  "private": true,
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "jest": {
    "moduleNameMapper": {
      "\\.(css|less|eot|svg|ttf|woff|woff2)$": "<rootDir>/jest.styleMock.js"
    }
  },
  "workspaces": [
    "packages/*"
  ],
  "resolutions": {
    "@types/slate": "^0.43.0"
  }
}
